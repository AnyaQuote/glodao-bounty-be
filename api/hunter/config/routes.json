{
  "routes": [
    {
      "method": "GET",
      "path": "/hunters",
      "handler": "hunter.find",
      "config": {
        "policies": ["isRelated"]
      }
    },
    {
      "method": "GET",
      "path": "/hunters/count",
      "handler": "hunter.count",
      "config": {
        "policies": ["isRelated"]
      }
    },
    {
      "method": "GET",
      "path": "/hunters/:id",
      "handler": "hunter.findOne",
      "config": {
        "policies": []
      }
    },
    {
      "method": "POST",
      "path": "/hunters",
      "handler": "hunter.create",
      "config": {
        "policies": []
      }
    },
    {
      "method": "PUT",
      "path": "/hunters/:id",
      "handler": "hunter.update",
      "config": {
        "policies": []
      }
    },
    {
      "method": "DELETE",
      "path": "/hunters/:id",
      "handler": "hunter.delete",
      "config": {
        "policies": []
      }
    },
    {
      "method": "POST",
      "path": "/hunters/verifySignMessage",
      "handler": "hunter.verifySignMessage",
      "config": {
        "policies": []
      }
    },
    {
      "method": "PATCH",
      "path": "/hunters/updateWalletAddress",
      "handler": "hunter.updateWalletAddress",
      "config": {
        "policies": ["global::is-owner", "global::sign-message"]
      }
    },
    {
      "method": "GET",
      "path": "/checkUserStaked",
      "handler": "hunter.checkUserStaked",
      "config": {
        "policies": []
      }
    }
  ]
}

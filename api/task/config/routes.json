{
  "routes": [
    {
      "method": "GET",
      "path": "/tasks",
      "handler": "task.find",
      "config": {
        "policies": []
      }
    },
    {
      "method": "GET",
      "path": "/tasks/count",
      "handler": "task.count",
      "config": {
        "policies": []
      }
    },
    {
      "method": "GET",
      "path": "/tasks/:id",
      "handler": "task.findOne",
      "config": {
        "policies": []
      }
    },
    {
      "method": "POST",
      "path": "/tasks",
      "handler": "task.create",
      "config": {
        "policies": []
      }
    },
    {
      "method": "PUT",
      "path": "/tasks/:id",
      "handler": "task.update",
      "config": {
        "policies": []
      }
    },
    {
      "method": "DELETE",
      "path": "/tasks/:id",
      "handler": "task.delete",
      "config": {
        "policies": []
      }
    },
    {
      "method": "POST",
      "path": "/tasks/createTask",
      "handler": "task.createTask",
      "config": {
        "policies": ["global::is-address-owner"]
      }
    },
    {
      "method": "GET",
      "path": "/tasks/getAverageCommunityReward/:limit",
      "handler": "task.getAverageCommunityReward",
      "config": {
        "policies": []
      }
    },
    {
      "method": "POST",
      "path": "/tasks/updateInAppTrial",
      "handler": "task.updateInAppTrial",
      "config": {
        "policies": []
      }
    }
  ]
}
